;系统寄存器定义

;------------------------------------------------------------
INDF	==	0x00		;间接寻址寄存器

TCC	==	0x01		;TCC计数器

PC	==	0x02		;程序指针

STATUS	==	0x03		;状态寄存器
;状态寄存器位定义
C	    ==	0		;进位标志
DC	    ==	1		;半进位标志
Z    	==	2		;零标志
P	    ==	3		;POWER DOWN标志
T	    ==	4		;Time-out标志
IOCS	==	6		;IOC寄存器页选择
			    	;0为IOC50~IOCF0
			    	;1为IOC51~IOCC1
RST	    ==	7		;复位类型标志
				    ;0为从其它复位类型唤醒
				    ;1为从引脚电平变化，外部中断或低电压检测中断唤醒

FSR	    ==	0x04		;RAM选择寄存器
;RAM选择寄存器位定义
BANKS	==	6		;0为选择BANK0
				    ;1为选择BANK1
S_BANK	==  7      	;特殊寄存器(0x05~0x0F)BANK选择
;------------------------------------------------------------
;BANK0部分系统寄存器定义
PORT5	==	0x05		;IO状态寄存器

PORT6	==	0x06		;IO状态寄存器

PORT7	==	0x07		;IO状态寄存器

AISR	==	0x08		;ADC输入选择寄存器
;ADC输入寄存器位定义
ADE7	==	7		;P57脚功能选择，0为普通IO口，1为模拟输入口
ADE6	==	6		;P55脚功能选择，0为普通IO口，1为模拟输入口
ADE5	==	5		;P70脚功能选择，0为普通IO口，1为模拟输入口
ADE4	==	4		;P67脚功能选择，0为普通IO口，1为模拟输入口
ADE3	==	3		;P53脚功能选择，0为普通IO口，1为模拟输入口
ADE2	==	2		;P52脚功能选择，0为普通IO口，1为模拟输入口
ADE1	==	1		;P51脚功能选择，0为普通IO口，1为模拟输入口
ADE0	==	0		;P50脚功能选择，0为普通IO口，1为模拟输入口

ADCON	==	0x09		;ADC控制寄存器
;ADC控制寄存器位定义
ADIS0	==	0
ADIS1	==	1
ADIS2	==	2		;模拟输入选择位
				;ADICS	ADIS2	ADIS1	ADIS0	Analog Input Select
				;0	0	0	0	ADIN0/P50
				;0	0	0	1	ADIN1/P51
				;0	0	1	0	ADIN2/P52
				;0	0	1	1	ADIN3/P53
				;0	1	0	0	ADIN4/P67	
				;0	1	0	1	ADIN5/P70	
				;0	1	1	0	ADIN6/P55	
				;0	1	1	1	ADIN7/P57	
				;1	0	X	X	OPOUT	
				;1	1	X	X	Internal 1/4VDD	
ADPD	==	3		;ADC电源位，1为ADC电源打开，2为ADC电源关闭
ADRUN	==	4		;ADC转换启动位，
CKR0	==	5
CKR1	==	6		;ADC时钟速率选择
				;00=1:16
				;01=1:4
				;10=1:64
				;11=1:1
VREFS	==	7		;ADC参考电压输入引脚
				;0为选择ADC参考电压为VDD
				;1为选择P54输入为参考电压

ADOC	==	0x0A		;ADC补偿校正寄存器
;ADC补偿校正寄存器位定义
ADICS	==	0		;ADC内部通道选择
VREF0	==	1
VREF1	==	2		;ADC输入参考电压源
				;VREF1	VREF0	ADC Internal Reference Voltage 
				;0	0	VDD (default) 
				;0	1	4.0V ± 1% 
				;1	0	3.0V ± 1% 
				;1	1	2.0V ± 1% 
VOF0	==	3
VOF1	==	4
VOF2	==	5		;补偿电压位
SIGN	==	6		;补偿电压极性标志，0为反向，1为正向
CALI	==	7		;校正使能位，高有效

ADDATA	==	0x0B		;ADC转换值

ADDATA1H==	0x0C		;ADC转换值

ADDATA1L==	0x0D		;ADC转换值

RE	==	0x0E		;低电压控制寄存器
;低电压控制寄存器位定义
LVDWE	==	0		;低电压检测唤醒位。1为使能
ICWE	==	1		;PORT5输入口唤醒使能位
CMPWE	==	2		;比较器唤醒使能位
ADWE	==	3		;ADC唤醒使能位
CMPIF	==	4		;比较器中断标志位
ADIF	==	5		;AD转换中断标志位
LVDIF	==	6		;低电压中断标志位
LVD	    ==	7		;低电压检测状态位
				    ;0为检测到低电压
				    ;1为没有检测低电压或低电压检测功能被禁止

RF	    ==	0x0F    ;中断状态寄存器
;中断状态寄存器位定义
TCIF	==	0		;TCC中断标志位
ICIF	==	1		;PORT6口输入电平变化中断标志位
EXIF	==	2		;外部中断标志位，检测INT口的下降沿有效
PWM1IF	==	3		;PWM1周期中断标志位
PWM2IF	==	4		;PWM2周期中断标志位
DT1IF	==	5		;PWM1占空中断标志位
DT2IF	==	6		;PWM2占空中断标志位
;------------------------------------------------------------


;BANK1部分系统寄存器定义

;------------------------------------------------------------
TBHP	==	0x05		;表格地址寄存器高位
;表格地址寄存器高位位定义
MLB	==	7		;选择机器码的高位或是低位存入寄存器

TBLP	==	0x06		;表格地址寄存器低位

PWMCON	==	0x07		;PWM控制寄存器
;PWM控制寄存器位定义
PWM1E	==	0		;PMW1使能位
PWM2E	==	1		;PMW2使能位
PWMCAS	==	2		;PMW模式选择
				;0为2个8bit PWM功能
				;1为1个16bit PWM功能

TMRCON	==	0x08		;定时器控制寄存器
;定时器控制寄存器位定义
T1P0	==	0
T1P1	==	1
T1P2	==	2		;TMR1分频选择位
T2P0	==	3
T2P1	==	4
T2P2	==	5		;TMR2分频选择位
T1EN	==	6		;TMR1使能位
T2EN	==	7		;TMR2使能位

PRD1	==	0x09		;PWM1周期寄存器

PRD2	==	0x0A		;PMW2周期寄存器

DT1	==	0x0B		;PWM1占空寄存器

DT2	==	0x0C		;PWM2占空寄存器

LVDIR	==	0x0E		;低电压中断和唤醒寄存器
;低电压中断和唤醒寄存器位定义
EXWE	==	0		;/INT口唤醒使能位。1为使能
LVD0	==	4
LVD1	==	5		;低电压检测等级控制位
				;LVDEN	LVD1,LVD0	低电压中断等级	/LVD
				;1	11		Vdd<=2.2V	0
				;1	11		Vdd>2.2V	1
				;1	10		Vdd<=3.3V	0
				;1	10		Vdd>3.3V	1
				;1	01		Vdd<=4.0V	0
				;1	01		Vdd>4.0V	1
				;1	00		Vdd<=4.5V	0
				;1	00		Vdd>4.5V	1
				;0	xx		N/A		1
LVDEN	==	6		;低电压检测使能位。1为使能
LVDIE	==	7		;低电压检测中断使能位。1为使能

SCR	==	0x0F		;系统控制寄存器
;系统控制寄存器位定义
RCM0	==	0
RCM1	==	1		;IRC模式选择位
				;RCM1	RCM0	Frequency(MHz)
				;1	1	4
				;1	0	16
				;0	1	8
				;0	0	1
IDLE	==	4		;Idle模式使能位
				;IDLE=0 + SLEP ----> sleep模式
				;IDLE=1 + SLEP ----> idle模式
CPUS	==	5		;CPU振荡源选择位
				;0为副频(WDT的内部时钟基准16KHz)
				;1为主频
TIMERSC	==	6		;TCC时钟源选择
				;0为选择副频
				;1为选择主频Fm/2或Fm/4
;------------------------------------------------------------
;IOCPAGE0系统寄存器定义
;------------------------------------------------------------
IOC50	==	0x05		;IO方向寄存器

IOC60	==	0x06		;IO方向寄存器

IOC70	==	0x07		;IO方向寄存器

IOC80	==	0x08		;比较器控制寄存器

IOC90	==	0x09		;PWM1 timer

IOCA0	==	0x0A		;PWM2 timer

IOCB0	==	0x0B		;下拉寄存器控制，0为使能

IOCC0	==	0x0C		;开漏输出控制寄存器。1为使能

IOCD0	==	0x0D		;PORT5口上拉控制寄存器。0为使能

IOCE0	==	0x0E		;WDT控制寄存器
;WDT控制寄存器位定义
CMPIE	==	4		;比较器中断使能位
ADIE	==	5		;AD中断使能位
EIS	==	6		;P60口功能定义
				;0为普通IO口
				;1为外部中断口
WDTE	==	7		;看门狗使能位控制

IOCF0	==	0x0F		;中断控制寄存器
TCIE	==	0		;TCC中断使能控制位
ICIE	==	1		;PORT6输入电平变化中断使能控制位
EXIE	==	2		;外部中断使能控制位
;PWM1E	==	3		;PWM1中断使能位
;PWM2E	==	4		;PWM2中断使能位
DT1IE	==	5
DT2IE	==	6
;------------------------------------------------------------
;IOCPAGE1系统寄存器定义
;------------------------------------------------------------
IOC51	==	0x05		;大电流控制寄存器1

IOC61	==	0x06		;大电流控制寄存器2

IOC71	==	0x07		;大电流控制寄存器1

IOC81	==	0x08		;大电流控制寄存器2

IOCF1	==	0x0F		;PORT6口上拉控制寄存器。0为使能
;------------------------------------------------------------
