AD_Test:  
;--------------------------------------------------------------
       INC      AD_Count_R     
       MOV      A,@3
       SUB      A,AD_Count_R  
       JBS      STATUS,0
       JMP      AD_Test_1
       CLR      AD_Count_R
;--------------------------------------------------------------                
AD_Test_1:
       MOV      A,AD_Count_R  
   	   ADD	    PC,A
       JMP      Ntc_AD
       JMP      Motor_AD
       JMP      Battery_AD
       JMP      AD_Test_90  
;--------------------------------------------------------------      
Battery_AD: 	
;检测电池电压
       MOV     A,@0X40            
	   MOV     AISR,A	     ;选择ADC6作为采样口          
	   MOV     A,@0X2E       ;P55口开始AD检测
	   MOV     ADCON,A	     ;参考电压为VDD,ADC的时钟预分频1:16
	                         ;调用AD程序		                                	                          	                          
	   CALL    AD_Test_V                    
       MOV     Rwk_Temperture01,Rwk03  
	   MOV     Rwk_Temperture02,Rwk04 
	   
	   MOV     AD_Vol_Buf1,Rwk_Temperture01       
       MOV     AD_Vol_Buf10,Rwk_Temperture02  
         
	   CALL    Mn_Vol_V   ;检测电池电压
	   JMP     AD_Test_90  
