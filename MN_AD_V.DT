    CJL  Rwk_Temperture02,Rwk_Temperture01,@Motor_High_10,@Motor_High_1,Mn_Motor_V_1
    CLR  Charge_Timer6
    INC  Charge_Timer5  
    MOV  A,@3
    SUB  A, Charge_Timer5  
    JBS  STATUS,0
    JMP  Mn_Motor_V_90
    CLR  Charge_Timer5
    
    JBC  Err_Motor 
    JMP  Mn_Volage_V_90
    BS   Err_Motor 
    CLR  Count2Sec 
    BS   TimerFlag_2S    
    BC   Idle_Release
    MOV  Mode_Count,@4  
    CLR  Key_Delay   
    JMP  Mn_Motor_V_90 
Mn_Motor_V_1:    
    CJG  Rwk_Temperture02,Rwk_Temperture01,@Motor_Low_10,@Motor_Low_1,Mn_Motor_V_90     
